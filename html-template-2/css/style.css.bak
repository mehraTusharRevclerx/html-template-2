*{
	padding: 0;
	margin: 0;
	box-sizing: border-box;
}
body{
	font-family: sans-serif;
}


.nav-sec{
	background-color: #52647a;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 1rem 3rem;
	
}
.nav-logo-sec{
	font-size: 2rem;
}
.fa-brands{
	color: #fff;
}

.nav-sec-links {
	
}
.nav-sec-links li{
	list-style: none;
	display: inline-block;
}
.nav-sec-links li a{
	text-decoration: none;
	color: #fff;
	padding: 0 1rem;
}
.banner{
	background: linear-gradient(to right, rgb(12 187 155 / 62%), rgb(6 135 104 / 62%)), center / cover no-repeat url("../img/bgimg.jpg");
	height: 90vh;
	color: #fff;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	text-align: center;
	padding: 0 1rem;
	
}

.arrows{
	font-size: 3rem;
	
}

.banner .banner-text-sec{
	line-height: 2.5rem;
	position: relative;
	top: 20%;
	
	
	
}

.banner .banner-text-sec h1{
	font-size: 4rem;
	text-transform: uppercase;
}


.banner .banner-text-sec h2{
	font-size: 1.8rem;
	text-transform: uppercase;
}

.banner .banner-text-sec p{
	font-size: 1.2rem;
	text-transform: uppercase;
	font-weight: 700;
}

.banner .banner-text-sec p:last-child{
	padding: 0.6rem;
	color: #33b194;
	background-color: #fff;
	font-size: 1.2rem;
	display: inline-block;
	font-weight: 900;
	border-radius: 10px; 
	
}

.second-sec{
	background-color: #38475a;
	display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
	height: 70vh;
	color: #fff;
	text-align:center;
}
.second-sec-text {
	text-transform: uppercase;
}
.second-sec-text  h2{
	color: #24b08e;
}
.second-sec-text  p{
	color: #647e89;
}

.avatar-img{
	width: 80%;
	border-radius: 50%;
}

.three-person-sec{
	display: flex;
	text-align: center;
}
.first-person-sec h3, .second-person-sec h3,.third-person-sec h3{
	color: #24b08e;
}

.first-person-sec p, .second-person-sec p,.third-person-sec p{
	color: #647e89;
}